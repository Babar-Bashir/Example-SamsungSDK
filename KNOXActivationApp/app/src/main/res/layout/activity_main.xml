<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.akexorcist.knoxactivationapp.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!" />

    <Button
        android:id="@+id/btn_activate_device_admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activate Device Admin" />

    <Button
        android:id="@+id/btn_deactivate_device_admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Deactivate Device Admin" />

    <Button
        android:id="@+id/btn_license"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activate License" />

    <Button
        android:id="@+id/btn_lock_device_admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lock Device Admin" />

    <Button
        android:id="@+id/btn_unlock_device_admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Unlock Device Admin" />
</LinearLayout>
