<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DoSomethingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prevent Facebook App"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_facebook_prevent"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Prevent" />

            <Button
                android:id="@+id/btn_facebook_clear"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Clear" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calculator App Name"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_calculator_change"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Change" />

            <Button
                android:id="@+id/btn_calculator_clear"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Clear" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enable/Disable YouTube App"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_youtube_disable"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Disable" />

            <Button
                android:id="@+id/btn_youtube_enable"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Enable" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enable/Disable Google Drive"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_drive_disable"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Disable" />

            <Button
                android:id="@+id/btn_drive_enable"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Enable" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start/Stop GPS"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_gps_start"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Start" />

            <Button
                android:id="@+id/btn_gps_stop"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Stop" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enable/Disable Camera"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_camera_disable"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Disable" />

            <Button
                android:id="@+id/btn_camera_enable"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Enable" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enable/Disable Home Key"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_home_disable"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Disable" />

            <Button
                android:id="@+id/btn_home_enable"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Enable" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Allow/Disallow Share List"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_share_disallow"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Disallow" />

            <Button
                android:id="@+id/btn_share_allow"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Allow" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Allow/Disallow Settings Changes"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_settings_disallow"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Disallow" />

            <Button
                android:id="@+id/btn_settings_allow"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Allow" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
